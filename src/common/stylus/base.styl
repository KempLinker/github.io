html
body
  width 100%
  height 100%
  overflow-x hidden
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Open Sans","Helvetica Neue",sans-serif,"Microsoft YaHei"
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

*
*:before
*:after
  -webkit-box-sizing inherit
  -moz-box-sizing inherit
  box-sizing inherit

a
  color $font-col-base
  text-decoration none

.clearfix
  display inline-block
  &:after
    display block
    content ''
    height 0
    line-height 0
    clear both
    visibility hidden

.cur-pointer
  cursor pointer


i.kl-icon
  display inline-block
  width 24px
  height 24px
  vertical-align sub
    opacity .8

i.kl-icon-mini
  display inline-block
  width 16px
  height 16px
  vertical-align sub
  opacity .8


.mr-4
  margin-right 4px
.mr-8
  margin-right 8px


